<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.WheelViewFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <EditText
                android:id="@+id/edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:autofillHints="@string/label_wheel_name"
                android:inputType="text"
                tools:ignore="LabelFor"/>

        <!-- Previous Mileage-->
        <LinearLayout
                android:id="@+id/group_premileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/edit_name"
        >
            <TextView
                    android:labelFor="@+id/edit_premileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_wheel_premileage"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

            <EditText
                    android:id="@+id/edit_premileage"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:autofillHints="@string/label_wheel_premileage"/>

        </LinearLayout>

        <!-- Mileage-->
        <LinearLayout
                android:id="@+id/group_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/group_premileage"
        >
            <TextView
                    android:labelFor="@+id/edit_mileage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_wheel_mileage"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

            <EditText
                    android:id="@+id/edit_mileage"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:autofillHints="@string/label_wheel_mileage"/>

        </LinearLayout>

        <!-- Voltage Max -->
        <LinearLayout
                android:id="@+id/group_vmax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/group_mileage"
        >
            <TextView
                    android:labelFor="@+id/edit_voltage_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_wheel_voltage_max"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

            <EditText
                    android:id="@+id/edit_voltage_max"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:autofillHints="@string/label_max"
            />
        </LinearLayout>

        <!-- Voltage Min -->
        <LinearLayout
                android:id="@+id/group_vmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/group_vmax"
        >
            <TextView
                    android:labelFor="@+id/edit_voltage_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/label_wheel_voltage_min"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

            <EditText
                    android:id="@+id/edit_voltage_min"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:autofillHints="@string/label_min"
            />
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
        >
            <Button
                    android:id="@+id/button_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/button_save"
            />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
