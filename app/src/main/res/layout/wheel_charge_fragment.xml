<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.WheelChargeFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                tools:ignore="UselessParent">

            <!-- Name-->
            <TableRow>
                <TextView
                        android:id="@+id/view_name"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold"
                />
            </TableRow>

            <!-- Title -->
            <TableRow android:layout_marginTop="15dp">
                <TextView
                        android:id="@+id/view_title"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="italic"
                        android:text="@string/label_charging"
                />
            </TableRow>

            <!-- km -->
            <TableRow android:layout_marginTop="15dp">
                <TextView
                        android:labelFor="@+id/edit_km"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="@string/label_distance"
                />

                <EditText
                        android:id="@+id/edit_km"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:autofillHints=""
                        android:inputType="text"
                />

                <TextView
                        android:labelFor="@+id/edit_km"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="@string/label_km"
                />
            </TableRow>

            <!-- Rate -->
            <TableRow android:layout_marginTop="10dp">
                <TextView
                        android:labelFor="@+id/view_wh_per_km"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="@string/label_rate"
                />

                <TextView
                        android:id="@+id/view_wh_per_km"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />

                <TextView
                        android:labelFor="@+id/view_wh_per_km"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="@string/label_wh_per_km"
                />
            </TableRow>

            <!-- Required voltage -->
            <TableRow android:layout_marginTop="10dp">
                <TextView
                        android:labelFor="@+id/view_required_voltage"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="@string/label_voltage"
                />

                <TextView
                        android:id="@+id/view_required_voltage"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded"
                />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
